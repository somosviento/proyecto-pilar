# Configuración de variables de entorno para PRODUCCIÓN
# Copiar este archivo como .env.production y configurar los valores reales

# Configuración de Flask
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=tu-clave-secreta-muy-segura-para-produccion

# Configuración de base de datos
DATABASE_URL=sqlite:///instance/formularios.db

# Configuración de Google Apps Script
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/TU_SCRIPT_ID/exec
GOOGLE_APPS_SCRIPT_TOKEN=tu-token-de-seguridad

# Configuración de Google Drive
GOOGLE_DRIVE_ROOT_FOLDER_ID=tu-folder-id-de-google-drive

# Configuración del template de Google Docs
TEMPLATE_DOC_ID=tu-template-doc-id

# Configuración de email (opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@dominio.com
SMTP_PASSWORD=tu-password-de-aplicacion
SMTP_USE_TLS=True

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=/ruta/al/proyecto/pilar2/logs/pilar.log

# Configuración de seguridad
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com
MAX_CONTENT_LENGTH=16777216

# Configuración de Apache/WSGI
APPLICATION_ROOT=/proyecto-pilar